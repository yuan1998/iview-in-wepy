

    <view class="i-sticky-demo">
        <i-sticky scrollTop="{{scrollTop}}">
            <block wx:for="{{cities}}" wx:for-index="index" wx:for-item="item" wx:key="key">
                <i-sticky-item i-class="i-sticky-demo-title">
                    <view slot="title">
                        {{item.key}}
                    </view>
                    <view slot="content">

                        <block wx:for="{{item.list}}" wx:for-index="in" wx:for-item="it" wx:key="in">
                            <view class="i-sticky-demo-item">
                                {{it.name}}
                            </view>
                        </block>
                    </view>
                </i-sticky-item>

            </block>
        </i-sticky>
    </view>