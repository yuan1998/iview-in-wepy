
    <i-panel title="带有文字的按钮"/>

    <i-page current="{{ current }}" total="5" bindchange="handleChange">
        <view slot="prev">Prev</view>
        <view slot="next">Next</view>
    </i-page>

    <i-panel title="带有文字和图标的按钮"/>

    <i-page current="{{ current }}" total="5" bindchange="handleChange">
        <view slot="prev">
            <i-icon type="return"/>
            上一步
        </view>
        <view slot="next">
            下一步
            <i-icon type="enter"/>
        </view>
    </i-page>

    <i-panel title="隐藏数字"/>

    <i-page current="{{ current }}" total="5" simple="simple" bindchange="handleChange">
        <view slot="prev">Prev</view>
        <view slot="next">Next</view>
    </i-page>

    <i-panel title="只显示数字"/>

    <i-page current="{{ current }}" total="5" mode="number" bindchange="handleChange"/>

    <i-panel title="显示点"/>

    <i-page current="{{ current }}" total="5" mode="pointer" bindchange="handleChange"/>