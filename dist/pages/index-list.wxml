
    <view class="i-index-demo">
        <i-index height="100%" bindchange="onChange">
            <block wx:for="{{cities}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                <i-index-item name="{{item.key}}">
                    <block wx:for="{{item.list}}" wx:for-index="in" wx:for-item="it" wx:key="in">
                        <view class="i-index-demo-item">
                            {{it.name}}
                        </view>
                    </block>
                </i-index-item>

            </block>

        </i-index>
    </view>